            .overwatch
                nav.navigation
                    img.picture.logo(src="overwatch.png", alt="Logo Overwatch", width="200", height="36")
                    ul.secondnav.menu
                        li
                            a.menu_element.link(href="#")="Jeu"
                        li
                            a.menu_element.link(href="#")="Héros"
                        li
                            a.menu_element.link(href="#")="Évenements"
                        li
                            a.menu_element.link(href="#")="Médias"
